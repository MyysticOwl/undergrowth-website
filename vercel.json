{
    "outputDirectory": "dist",
    "functions": {
        "api/activate.bundle.mjs": {
            "memory": 1024,
            "maxDuration": 10
        },
        "api/webhook.bundle.mjs": {
            "memory": 1024,
            "maxDuration": 30
        }
    },
    "rewrites": [
        {
            "source": "/api/activate",
            "destination": "/api/activate.bundle"
        },
        {
            "source": "/api/webhook",
            "destination": "/api/webhook.bundle"
        },
        {
            "source": "/((?!api/|install.sh|install.ps1).*)",
            "destination": "/index.html"
        }
    ]
}